# Configurações da Aplicação
APP_NAME=Crypto Arbitrage Monitor
APP_VERSION=1.0.0
DEBUG=false

# Configurações do Servidor (Railway define PORT automaticamente)
HOST=0.0.0.0
PORT=8000

# Configurações de CORS (para produção)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.railway.app

# Configurações de Logging
LOG_LEVEL=info

# Configurações do Banco de Dados (opcional)
# DATABASE_URL=postgresql://user:password@localhost:5432/crypto_arbitrage

# Configurações das Exchanges (opcional - APIs públicas funcionam sem chaves)
# BINANCE_API_KEY=your_binance_api_key_here
# BINANCE_SECRET_KEY=your_binance_secret_key_here
# COINBASE_API_KEY=your_coinbase_api_key_here
# COINBASE_SECRET_KEY=your_coinbase_secret_key_here
# KRAKEN_API_KEY=your_kraken_api_key_here
# KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# Configurações de Notificações (opcional)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
# TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# TWILIO_WHATSAPP_NUMBER=+14155238886
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Configurações de Arbitragem
MIN_PROFIT_PERCENTAGE=0.5
MAX_PRICE_DIFFERENCE=10.0
UPDATE_INTERVAL=30